#info="ä»»åŠ¡åˆ†å‘å¤„ç†ç¨‹åº(owtskdispatch) ä»»åŠ¡ç®¡ç†å¤„ç†ç¨‹åº(owtskmanager) æµé‡æ§åˆ¶ç®¡ç†ç¨‹åº(owmsgforward) ftpæœåŠ¡ç¨‹åº(owftpserver) æ–‡ä»¶åŒæ­¥ç¨‹åº(owfilesync) Ftpç®¡ç†ç¨‹åº(owftpmanager) DBç®¡ç†ç¨‹åº(owdbmanager) è¯ä¹¦æœåŠ¡(owlicense) å®šæ—¶æœåŠ¡æ‰§è¡Œç¨‹åº(owcron) ç›‘ç®¡ç³»ç»Ÿ(owsysmonitor) çŸ­ä¿¡é€šçŸ¥(owsmsalert)"
#prog="owtskdispatch owtskmanager owmsgforward owftpserver owfilesync owftpmanager owdbmanager owlicense owcron owsysmonitor owsmsalert"


info="ä»»åŠ¡åˆ†å‘å¤„ç†ç¨‹åº(owtskdispatch) ä»»åŠ¡ç®¡ç†å¤„ç†ç¨‹åº(owtskmanager) æµé‡æ§åˆ¶ç®¡ç†ç¨‹åº(owmsgforward) ftpæœåŠ¡ç¨‹åº(owftpserver) æ–‡ä»¶åŒæ­¥ç¨‹åº(owfilesync) Ftpç®¡ç†ç¨‹åº(owftpmanager)  è¯ä¹¦æœåŠ¡(owlicense) å®šæ—¶æœåŠ¡æ‰§è¡Œç¨‹åº(owcron) ç›‘ç®¡ç³»ç»Ÿ(owsysmonitor) çŸ­ä¿¡é€šçŸ¥(owsmsalert)"

prog="owtskdispatch owtskmanager owmsgforward owftpserver owfilesync owftpmanager  owlicense owcron owsysmonitor owsmsalert"

ipos=0
for i in $info
do
	echo  "å¯åŠ¨" "$i" "..."
	jpos=0
	for j in $prog
	do
		if [ $ipos != $jpos ] ; then
			jpos=`expr $jpos + 1`
			continue
		else
			$j start > /dev/null 2>&1
			sleep 2
			echo "..."
			number=`ps -u $LOGNAME | grep -c "[ ]$j\$"`
			if [ $number = 0 ] ; then
				echo "[1;31må¯åŠ¨ç¨‹åº$jå¤±è´¥[0;37m"
				exit 1
			fi
			break
		fi
	done
	echo "[1;32mæˆåŠŸ![0;37m"
	ipos=`expr $ipos + 1`
done

echo "..."

echo "è¿›ç¨‹æ£€æŸ¥"
ps -ef|grep $LOGNAME|grep ow
